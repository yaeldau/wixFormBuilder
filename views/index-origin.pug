html
    head
        style
            include styles.css
        title= title
    body
        h1.Y-forms_h1
            a(href="/") Y-forms
        br
        center
            h1 Forms List page
            br
            br
            a(href='/builder')
                button(type=button).btn.btn-info.btn Create new form!
        br
        br
        table.table.table-hover
            th.table_titles= "id"
            th.table_titles= "name"
            th.table_titles= "# submissions"
            th.table_titles= "submit page"
            th.table_titles= "submissions page"
            each form, id in forms
                tr
                    th.table_content= id
                    th.table_content= form.form_name
                    th.table_content= form.submissions
                    th.table_content
                        a(href='submit/'+id) View
                    th.table_content
                        a(href='submissions/'+id) View
        br
        br

