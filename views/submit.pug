style(type="text/css").
    .Y-forms_h1 {
        background-color:  bisque;
        margin-top: 0px;
        padding-top: 30px;
        padding-bottom: 30px;
        text-align:  -webkit-center;
    }
    div {
        width: max-content;
    }


html
    head
        title= "Submit page"
    body
        h1.Y-forms_h1
            a(href="/") Y-forms
        br
        center
            div
                h1= "Forms Submit page"
                br
                h2= form_name
                br

                form(action="/submit/"+form_id, method="post")
                    table.table.table-hover
                        each field in fields
                            tr
                                th.table_content= field.label
                                th.table_content
                                    input.form-control(id='input_'+field.name, type=field.type, required='')
                    button.btn.btn-primary(type='submit') submit!